<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Post</h1>
  <hr>
    <div class="well col-lg-7">
      <h3><%= @post.title %></h3>
      <h5>By <%= @post.user.name %><br><%= time_ago_in_words @post.created_at %> ago</h5>
      <pre><%= @post.content %></pre>
      <% if current_user == @post.user %>
          <div class="btn-group pull-right" role="group"  >
            <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-success " %>
          </div>
      <% end %>
      <%= link_to 'Back', posts_path, class: "btn btn-info "%>
    </div>
</div>


<hr>

<div class="well col-lg-7">
  <h2>Comments</h2>
  <%= render @post.comments %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>
